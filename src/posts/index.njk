---
title: All Posts
layout: base.njk

pagination:
  data: collections.post   # source for the list
  size: 5                  # posts per page
  reverse: true            # newest first

# permalink logic:
#   page 1  → /posts/index.html  (shown at /posts/)
#   page 2+ → /posts/page/2/index.html  …
permalink: "/posts/{% if pagination.pageNumber > 0 %}page/{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
---

<h2>Blog posts</h2>

<ul>
  {%- for post in pagination.items -%}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
      <small>— {{ post.date | date("MMMM d, yyyy") }}</small>
    </li>
  {%- endfor -%}
</ul>

<nav style="display:flex;justify-content:space-between;gap:1rem;">
  {% if pagination.href.previous %}
    <a href="{{ pagination.href.previous }}">&larr; Newer&nbsp;Posts</a>
  {% else %}
    <span></span>
  {% endif %}

  {% if pagination.href.next %}
    <a href="{{ pagination.href.next }}">Older&nbsp;Posts &rarr;</a>
  {% endif %}
</nav>
